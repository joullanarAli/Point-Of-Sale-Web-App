@model List<market.Models.Supplier>

<div  class="row my-2 position-static">
    <p id="tempDataMessage" class="position-static" style="color:red">
         @TempData["Message"]
    </p>
</div>

<div class="row my-3">
    <div class="col-4">
        <input type="text" class="form-control text-success" placeholder="Search Name..." onkeyup="search(this.value)" />
    </div>
    <div class="col-2">
        <a class="btn btn-primary" href="@Url.Action("Create","Suppliers")" style="margin-left:10px">Create Suppliers</a>
    </div>
    <div class="col-2">
        <button class="btn btn-warning"  onclick="get()" style="margin-bottom: 10px;" >Get Suppliers</button>
    </div>
    
</div>
@*__________________________________________________________________
*@

<div class = "container">
        <div class="row test"></div>
    </div>

<div id="modal-container">
</div>
@section Scripts {
    <script>
        function get() {
            $.ajax({
                url: '@Url.Action("GetSuppliers", "Suppliers")',
                type: 'GET',
                dataType: 'json',
                beforeSend: function() {
                },
                success: function(response) {
                    if (response.success) {
                        $(".test").empty();
                        $.each(response.data, (index, item) => {
                            $(".test").append(` <div class="col-md-3">
                                                        <div class="card card-widget widget-user-2" style="margin-top=20px">
                                                            <div class="widget-user-header bg-light" style="min-height:100px" >
                                                                 <div class="float-right">
                                                                            <button class="btn btn-light" onclick="showModal('${item.id}')"
                                                                                    style='font-size:13px;position: relative;top:-12px;'>
                                                                                <i class='fas fa-pen' style='font-size:10px;color:black; position: relative;top:0px;'></i>
                                                                            </button>
                                                                 </div>
                                                                 <div class="float-right">
                                                                           <button class="btn btn-light" onclick="del('${item.id}')"  
                                                                                   style='font-size:13px;position: relative;top:-12px'>
                                                                                    <i class='fas fa-trash' style='font-size:13px;color:black; position: relative;top:0px'></i>
                                                                           </button>
                                                                 </div>
                                                                    <h5 class="widget-user-desc" style="margin-left:10px;"><b>Name :</b></br> ${item.name}</h5>
                                                            </div>
                                                           
                                                        </div>
                                                    </div>`)
                        })
                    }
                    else {
                        alert(response.message)
                    }
                },
                error: function(msg) {
                    console.error(msg);
                }
            })
        }
    </script>
    <script>
        function search(val) {
            $.ajax({
                url: '@Url.Action("Search", "Suppliers")' + '?value=' + val,
                type: 'GET',
                dataType: 'json',
                beforeSend: function () {
                    $('tbody').html('')
                },
                success: function (response) {
                    if (response.success) {
                       $(".test").empty();
                        $.each(response.data, (index, item) => {
                            $(".test").append(` <div class="col-md-3">
                                                        <div class="card card-widget widget-user-2" style="margin-top=20px">
                                                            <div class="widget-user-header bg-light" style="min-height:100px" >
                                                                 <div class="float-right">
                                                                            <button class="btn btn-light" onclick="showModal('${item.id}')"
                                                                                    style='font-size:13px;position: relative;top:-12px;'>
                                                                                <i class='fas fa-pen' style='font-size:10px;color:black; position: relative;top:0px;'></i>
                                                                            </button>
                                                                 </div>
                                                                 <div class="float-right">
                                                                           <button class="btn btn-light" onclick="del('${item.id}')"  
                                                                                   style='font-size:13px;position: relative;top:-12px'>
                                                                                    <i class='fas fa-trash' style='font-size:13px;color:black; position: relative;top:0px'></i>
                                                                           </button>
                                                                 </div>
                                                                    <h5 class="widget-user-username" style="margin-left:10px;"><b>Name :</b></br> ${item.name}</h5>
                                                            </div>
                                                        
                                                        </div>
                                                    </div>`)
                        })
                    }
                    else {
                        alert(response.message)
                    }
                },
                error: function (msg) {
                    console.error(msg);
                }
            })
        }
    </script>
    <script>
        function showModal(id) {
            $.ajax({
                url: '@Url.Action("GetModal", "Suppliers")' + "?id=" + parseInt(id),
                type: 'GET',
                dataType: 'html',
                success: function (response) {
                    $('#modal-container').html(response);
                    $('.modal').modal('show');
                    $.validator.unobtrusive.parse('form-id');

                },
                error: function (msg) {
                    console.error(msg);
                }
            })
        }
    </script>
    <script>
        function del(id) {
            $.ajax({
                url: '@Url.Action("Delete", "Suppliers")' + "?id=" + parseInt(id),
                type: 'GET',
                dataType: 'html',
                success: function (response) {
                    $('#modal-container').html(response);
                    $('.modal').modal('show');
                    $.validator.unobtrusive.parse('form-id');

                },
                error: function (msg) {
                    console.error(msg);
                }
            })
        }
    </script>
       <script>
        setTimeout(function () {
            document.getElementById('tempDataMessage').innerHTML='';
        }, 3000); // 3000 milliseconds = 3 sec
    </script>
    <script>
        function mysubmit(e)
        {
            e.preventDefault();
                
                var Name = document.getElementById('Name').value;
                var Id = document.getElementById('Id').value;
                let obj = {
                    "Name": Name,
                    "Id":Id,
                            };
                    $.ajax({
                        url: '/Suppliers/Edit',
                        type: 'POST',
                        contentType: "application/x-www-form-urlencoded; charset=UTF-8",
                        data:obj ,
                        //data: formData,
                        success: function (response) {
                            if (response.success) {
                                window.location.href = '/Suppliers/Index';
                            } else {
                                $('#error').text('');

                                for (var fieldName in response.errors) {
                                    var errorMessage = response.errors[fieldName];
                                    $("#error").append(errorMessage + '<br>');
                                }
                            }
                        },
                        error: function () {
                            alert('An error occurred during the AJAX request.');
                        }
                    })
        }
   
    </script>
    }