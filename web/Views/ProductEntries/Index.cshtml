    <script>
        function showModal(id) {
            $.ajax({
                url: '@Url.Action("GetModal", "ProductEntries")' + "?id=" + parseInt(id),
                type: 'GET',
                dataType: 'html',
                success: function(response) {
                    $('#modal-container').html(response); 
                    $('.modal').modal('show');
                    $.validator.unobtrusive.parse('form-id');
                },
                error: function(msg) {
                    console.error(msg);
                }
            })
        }
    </script>

    <script>
        function del(id) {
            $.ajax({
                url: '@Url.Action("Delete", "ProductEntries")' + "?id=" + parseInt(id),
                type: 'GET',
                dataType: 'html',
                success: function(response) {
                    $('#modal-container').html(response); 
                    $('.modal').modal('show');
                    $.validator.unobtrusive.parse('form-id');
                    
                },
                error: function(msg) {
                    console.error(msg);
                }
            })
        }
    </script>

