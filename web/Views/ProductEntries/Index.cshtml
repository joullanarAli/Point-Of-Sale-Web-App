                                                                         <button class="btn btn-light" onclick="window.location.href='/ProductEntries/Details/?id=${item.id}';"
                                                                                    style='font-size:13px;position: relative;top:-12px'>
                                                                                <i class='fas fa-cart-plus' style='font-size:13px;color:black; position: relative;top:0px'></i>
                                                                       </button>
                                                             </div>
                                                                    <h5 class="widget-user-desc" style="margin-left:10px;"><b>Date :</b></br> ${formattedDate}</h5>
                                                                    <h5 class="widget-user-desc" style="margin-left:10px;"><b>Supplier :</b></br> ${response.supplierNames[item.supplierId]}</h5>
                                                            </div>
                                                           
