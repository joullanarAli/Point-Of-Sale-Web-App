@model market.Models.Customer
<!DOCTYPE html>
<html lang="en">
    <head>
        <style>
            .form-control{
                width:50%;
                margin-left:200px;
            }
            label{
                 margin-left:200px;
            }
            #isVip{
                 margin-left:450px;
            }
            .btn-secondary{
                margin-left:200px;                
            }
            .btn-primary{
                margin-right:385px;
            }
            .text-danger{      
                margin-left:200px;
            }
            h2{      
                color:white;
            }
        </style>
    </head>

    <body>
        <form class="form" method="post" action="@Url.Action("Create","Customers")">
            <h2>Create Customer</h2>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input autocomplete="off" asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
                <br />
                <label asp-for="Address"></label>
                <input autocomplete="off" asp-for="Address" class="form-control" required />
                <span asp-validation-for="Address" class="text-danger"></span>
                <br />
                <label asp-for="PhoneNumber"></label>
                <input autocomplete="off" asp-for="PhoneNumber" class="form-control" required />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                <br />
                <label asp-for="EmailAddress">Email</label>
                <input autocomplete="off" asp-for="EmailAddress" class="form-control" required type="email" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                <br />
                <label asp-for="IsVip"></label>
                <input autocomplete="off" asp-for="IsVip" class="form-control"  />
                <span asp-validation-for="IsVip" class="text-danger"></span>
                <br />
            </div>
            <div class="d-flex justify-content-between">
                <a href="/Customers/Index" class="btn btn-secondary">Back</a>
                <input type="submit" class="btn btn-primary" value="Submit" />
            </div>
        </form>
</body>
</html>


