
@model List<market.Models.Order>

<div  class="row my-2 position-static">
    <p id="tempDataMessage" class="position-static" style="color:red">
         @TempData["Message"]
    </p>
</div>

<div class="row my-3">
    <div class="col-4">
        <a class="btn btn-primary" href="@Url.Action("Create","Orders")">
                Create Order
        </a>
    </div>
   <div class="col-4">
        <input type="text" class="form-control text-success" placeholder="Search..." onkeyup="search(this.value)" />
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Discount (%)</th>
            <th>Tax</th>
            <th>Delivery Price</th>
            <th>Delivery Address</th>
            <th>Total Price</th>
            <th>Order Date</th>
            <th>Customer</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>

    </tbody>
</table>
<button class="btn btn-warning" onclick="get()">Get Orders</button>

<div id="modal-container">
</div>
@section Scripts {
    <script>
        function get() {
            $.ajax({
                url: '@Url.Action("GetOrders", "Orders")',
                type: 'GET',
                dataType: 'json',
                beforeSend: function() {
                },
                success: function(response) {
                    if (response.success) {
                        $('tbody').empty();
                        $.each(response.data, (index, item) => {
                            const date = new Date(item.orderDate);
                            const formattedDate = date.toLocaleString();
                            console.log(item.orderDate);
                            $('tbody').append(` <tr>
                                <td>${item.discount}</td>
                                <td>${item.tax}</td>
                                <td>${item.deliveryPrice}</td>
                                <td>${item.deliveryAddress}</td>
                                <td>${item.totalPrice}</td>
                                <td>${formattedDate}</td>
                                <td>${item.customer.name}</td>
                                <td>
                                    <button class="btn btn-light", onclick="showModal('${item.id}')">
                                        <i class='fas fa-pen' style='font-size:13px;color:black'></i>
                                    </button>
                                    <button class="btn btn-light", onclick="del('${item.id}')">
                                        <i class='fas fa-trash' style='font-size:13px;color:black'></i>
                                    </button>
                                    <button onclick="view(${item.id})" class="btn btn-light">
                                        <i class='fas fa-eye' style='font-size:13px;color:black'></i>
                                    </a>
                                    <button class="btn btn-light", onclick="addItem('${item.id}')">
                                        <i class='fas fa-cart-plus' style='font-size:13px;color:black'></i>
                                    </button>
                                    
                                </td>
                    </tr>`)
                        })
                    }
                    else {
                        alert(response.message)
                    }
                },
                error: function(msg) {
                    console.error(msg);
                }
            })
        }
    </script>
    <script>
        function search(val) {
            $.ajax({
                url: '@Url.Action("Search", "Orders")' + '?value=' + val,
                type: 'GET',
                dataType: 'json',
                beforeSend: function () {
                    $('tbody').html('')
                },
                success: function (response) {
                    if (response.success) {
                        $('tbody').empty();
                        $.each(response.data, (index, item) => {
                            const date = new Date(item.orderDate);
                            const formattedDate = date.toLocaleString();
                            $('tbody').append(` <tr>
                                                    <td>${item.discount}</td>
                                                    <td>${item.tax}</td>
                                                    <td>${item.deliveryPrice}</td>
                                                    <td>${item.deliveryAddress}</td>
                                                    <td>${item.totalPrice}</td>
                                                    <td>${formattedDate}</td>
                                                    <td>${item.customerId}</td>
                                                    <td>
                                                        <button class="btn btn-light", onclick="showModal('${item.id}')">
                                                            <i class='fas fa-pen' style='font-size:13px;color:black'></i>
                                                        </button>
                                                        <button class="btn btn-light", onclick="del('${item.id}')">
                                                            <i class='fas fa-trash' style='font-size:13px;color:black'></i>
                                                        </button>
                                                        <a href="/Orders/Details/?id=${item.id}" class="btn btn-light">
                                                            <i class='fas fa-eye' style='font-size:13px;color:black'></i>
                                                        </a>
                                                        <button class="btn btn-light", onclick="addItem('${item.id}')">
                                                            <i class='fas fa-cart-plus' style='font-size:13px;color:black'></i>
                                                        </button>
                                                    </td>
                                                </tr>`)
                        })
                    }
                    else {
                        alert(response.message)
                    }
                },
                error: function (msg) {
                    console.error(msg);
                }
            })
        }
    </script>
    <script>
        function showModal(id) {
            $.ajax({
                url: '@Url.Action("GetModal", "Orders")' + "?id=" + parseInt(id),
                type: 'GET',
                dataType: 'html',
                success: function(response) {
                    $('#modal-container').html(response); 
                    $('.modal').modal('show');
                    $.validator.unobtrusive.parse('form-id');
                    
                },
                error: function(msg) {
                    console.error(msg);
                }
            })
        }
    </script>
    <script>
        function del(id) {
            $.ajax({
                url: '@Url.Action("Delete", "Orders")' + "?id=" + parseInt(id),
                type: 'GET',
                dataType: 'html',
                success: function(response) {
                    $('#modal-container').html(response); 
                    $('.modal').modal('show');
                    $.validator.unobtrusive.parse('form-id');
                    
                },
                error: function(msg) {
                    console.error(msg);
                }
            })
        }
    </script>
    <script>
        function view(id) 
        {
            window.location.href = '/Orders/Details/?id='+id;
        }
    </script>
    <script>
        setTimeout(function () {
            document.getElementById('tempDataMessage').innerHTML = '';
        }, 3000); // 3000 milliseconds = 3 sec
    </script>

    <script>

        function mysubmit(e) {
            e.preventDefault();

            var Discount = document.getElementById('Discount').value;
            var Tax = document.getElementById('Tax').value;
            var DeliveryPrice = document.getElementById('DeliveryPrice').value;
            var DeliveryAddress = document.getElementById('DeliveryAddress').value;
            var OrderDate = document.getElementById('OrderDate').value;
            var CustomerId = document.getElementById('CustomerId').value;
            var Id = document.getElementById('Id').value;
            var TotalPrice = document.getElementById('TotalPrice').value;
            let obj = {
                "Discount": Discount,
                "Tax": Tax,
                "Id": Id,
                "DeliveryPrice": DeliveryPrice,
                "DeliveryAddress": DeliveryAddress,
                "TotalPrice": TotalPrice,
                "OrderDate": OrderDate,
                "CustomerId": CustomerId,
            };
            $.ajax({
                url: '/Orders/Edit',
                type: 'POST',
                contentType: "application/x-www-form-urlencoded; charset=UTF-8",
                data: obj,
                //data: formData,
                success: function (response) {
                    if (response.success) {
                        window.location.href = '/Orders/Index';
                    } else {
                        $('#error').text('');

                        for (var fieldName in response.errors) {
                            var errorMessage = response.errors[fieldName];
                            $("#error").append(errorMessage + '<br>');
                        }

                    }
                },
                error: function () {
                    alert('An error occurred during the AJAX request.');
                }
            })
        }

    </script>
    <script>
        function addItem() {
            $.ajax({
                url: '@Url.Action("AddProducts", "Orders")',
                type: 'GET',
                dataType: 'json',
                beforeSend: function () {
                },
                success: function (response) {
                    if (response.success) {
                        $('tbody').empty();
                        $.each(response.data, (index, item) => {
                            const date = new Date(item.orderDate);
                            const formattedDate = date.toLocaleDateString();
                            $('tbody').append(` <tr>
                                        <td>${item.id}</td>
                                        <td>${item.name}</td>
                                        <td>${item.description}</td>
                                        <td>${item.deliveryAddress}</td>
                                        <td>${item.totalPrice}</td>
                                        <td>${formattedDate}</td>
                                        <td>${item.customer.name}</td>
                                        <td>
                                            <button class="btn btn-light", onclick="showModal('${item.id}')">
                                                <i class='fas fa-pen' style='font-size:13px;color:black'></i>
                                            </button>
                                            <button class="btn btn-light", onclick="del('${item.id}')">
                                                <i class='fas fa-trash' style='font-size:13px;color:black'></i>
                                            </button>
                                            <button class="btn btn-light", onclick="view('${item.id}')">
                                                <i class='fas fa-eye' style='font-size:13px;color:black'></i>
                                            </button>
                                            <button class="btn btn-light", onclick="addItem('${item.id}')">
                                                <i class='fas fa-cart-plus' style='font-size:13px;color:black'></i>
                                            </button>
                                        </td>
                            </tr>`)
                        })
                    }
                    else {
                        alert(response.message)
                    }
                },
                error: function (msg) {
                    console.error(msg);
                }
            })
        }
    </script>
    
}